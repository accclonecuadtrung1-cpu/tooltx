<script>
function fs(){
  if(document.documentElement.requestFullscreen){
    document.documentElement.requestFullscreen();
  }
}
function predict(){
  fs();
  document.getElementById('hack').style.display='flex';
  const log=document.getElementById('log');
  log.innerText='';
  const msgs=[
    'Connecting to nodeâ€¦',
    'Reading last resultâ€¦',
    'Analyzing patternsâ€¦',
    'Bypassing RNGâ€¦',
    'Result locked.',
    'Dá»° ÄOÃN: ' + (Math.random()>0.5?'ğŸ”¥ TÃ€I':'â„ï¸ Xá»ˆU'),
    'âš ï¸ ÄÃ¢y chá»‰ lÃ  WEB TROLL'
  ];
  let i=0;
  const t=setInterval(()=>{
    log.innerText+=msgs[i]+'\n';
    i++;
    if(i>=msgs.length) clearInterval(t);
  },900);
}
function exitHack(){
  document.getElementById('hack').style.display='none';
  if(document.exitFullscreen) document.exitFullscreen();
}
